<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.impacthub.members">

    <application
        android:name=".application.ImpactHubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.controllers.MainTabsActivity" />
        <activity android:name=".ui.features.filters.FilterActivity" />

        <permission android:name="net.impacthub.members.C2D_MESSAGE"
            android:protectionLevel="signature" />

        <uses-permission android:name="net.impacthub.members.C2D_MESSAGE" />
    </application>

</manifest>