<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.impacthub.members.ui.widgets.RoundedImageView
            android:id="@+id/image_banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@color/colorBackground"
            app:riv_corner_radius_top_left="12dp"
            app:riv_corner_radius_top_right="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/date_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/locations"
                        android:src="@mipmap/calendar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <net.impacthub.members.ui.widgets.TypefaceTextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Date event"
                            android:textColor="@color/warm_grey_2"
                            android:textSize="12sp"
                            app:typeface="fonts/gt-walsheim-light-web.ttf" />

                        <net.impacthub.members.ui.widgets.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/item_text_top_margin"
                            android:textColor="@color/greyish_brown"
                            android:textSize="12sp"
                            app:typeface="fonts/gt-walsheim-light-web.ttf"
                            android:text="15 May" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhiteThree" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/map_pin"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:contentDescription="@string/locations"
                            android:src="@mipmap/location_pin" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <net.impacthub.members.ui.widgets.TypefaceTextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="City"
                                android:textColor="@color/warm_grey_2"
                                android:textSize="12sp"
                                app:typeface="fonts/gt-walsheim-light-web.ttf" />

                            <net.impacthub.members.ui.widgets.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/item_text_top_margin"
                                android:textColor="@color/greyish_brown"
                                android:textSize="12sp"
                                app:typeface="fonts/gt-walsheim-light-web.ttf"
                                android:text="Amsterdam" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/colorWhiteThree" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/time_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:contentDescription="@string/locations"
                        android:src="@mipmap/clock" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <net.impacthub.members.ui.widgets.TypefaceTextView
                            android:id="@+id/clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Time"
                            android:textColor="@color/warm_grey_2"
                            android:textSize="12sp"
                            app:typeface="fonts/gt-walsheim-light-web.ttf" />

                        <net.impacthub.members.ui.widgets.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/item_text_top_margin"
                            android:textColor="@color/greyish_brown"
                            android:textSize="12sp"
                            app:typeface="fonts/gt-walsheim-light-web.ttf"
                            android:text="5PM-7PM" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <net.impacthub.members.ui.widgets.TypefaceTextView
        android:id="@+id/text_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="A guide to reaching your sustainable development goalss"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:typeface="fonts/gt-walsheim-light-web.ttf" />

</android.support.v7.widget.CardView>