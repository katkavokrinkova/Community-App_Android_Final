<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <include layout="@layout/layout_info_location" />

    <include
        layout="@layout/layout_member_count_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        tools:showIn="@layout/item_layout_company">

        <ImageView
            android:id="@+id/salary_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_text_top_margin"
            android:contentDescription="@string/locations"
            android:src="@mipmap/pay_icon" />

        <net.impacthub.members.ui.widgets.TypefaceTextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/item_text_top_margin"
            android:paddingTop="2dp"
            android:text="26000-36000"
            android:textColor="@color/warm_grey_2"
            android:textSize="12sp"
            app:typeface="fonts/gt-walsheim-light-web.ttf" />

    </LinearLayout>

</LinearLayout>