<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="front_page_button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_side</item>
        <item name="android:layout_marginRight">@dimen/button_margin_side</item>
        <item name="android:background">@drawable/button_shadow</item>
    </style>

    <style name="nav_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ToolbarColour" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ToolbarConstraint" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <!--<item name="android:background">@drawable/bottom_shadow</item>-->
        <item name="android:theme">@style/ToolbarColour</item>
    </style>

    <style name="ToolbarConstraint.WithBack" parent="ToolbarConstraint">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="progress_bar" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">@dimen/message_thumbnail</item>
        <item name="android:layout_height">@dimen/message_thumbnail</item>
        <item name="android:visibility">gone</item>
        <item name="colorAccent">@color/impacthub</item>

    </style>

</resources>
